{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env"
    ],
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**"
            ]
        },
        "api:install": {
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "start": {
            "cache": true,
            "persistent": false,
            "dependsOn": [
                "^build"
            ]
        },
        "lint": {},
        "test": {},
        "test:verbose": {
            "cache": false
        }
    }
}